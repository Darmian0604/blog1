<h1 class="page-title"><%= t "Products" %></h1>

<div class="actions">
  <%= link_to "New product", new_product_path, class: "btn btn-new" if authenticated? %>
  <%= link_to "Login", new_session_path, class: "btn btn-login" unless authenticated? %>
</div>

<div id="products" class="product-list">
  <% @products.each do |product| %>
    <div class="product-item">
      <%= link_to product.name, product, class: "product-link" %>
    </div>
  <% end %>
</div>
