<p class="back-link"><%= link_to "Back", products_path %></p>

<section class="product">
  <% if @product.featured_image.attached? %>
    <div class="product-image">
      <%= image_tag @product.featured_image %>
    </div>
  <% end %>

  <section class="product-info">
    <% cache @product do %>
      <h1 class="product-title"><%= @product.name %></h1>
      <p class="product-description"><%= @product.description %></p>
    <% end %>

    <%= render "inventory", product: @product %>

    <% if authenticated? %>
      <div class="product-actions">
        <%= link_to "Edit", edit_product_path(@product), class: "button edit-button" %>
        <%= button_to "Destroy", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "button delete-button" %>
      </div>
    <% end %>
  </section>
</section>

